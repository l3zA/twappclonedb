extends ../layout

block title
  = `New Tweet`

block content
  h1.title New tweet

  a(href=`/tweets`) Back to tweets

  form(action="/tweets", method="POST")
    input.is-invisible.input(name="user", value=`${user}`)/
    .field
      .control 
        input.input(name="msg", placeholder="Your message")/
    .field
      .control
        button.button.is-link.is-fullwidth Tweet